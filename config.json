{
  "tts_engine": "kokoro",
  "normalizer": {
    "language": "english",
    "input_case": "cased",
    "verbose": false
  },
  "segmenter": {
    "language": "english",
    "strategy": "sentence_count",
    "max_chars": 300,
    "min_chars": 3,
    "sentences_per_chunk": 1
  },
  "tts": {
    "language": "english-gb",
    "voice": "bf_vale",
    "speed": 1.0,
    "verbose": false,
    "model_path": "kokoro-v1.1-zh.onnx",
    "voices_path": "voices-v1.1-zh.bin",
    "model_url": "https://github.com/thewh1teagle/kokoro-onnx/releases/download/model-files-v1.1/kokoro-v1.1-zh.onnx",
    "voices_url": "https://github.com/thewh1teagle/kokoro-onnx/releases/download/model-files-v1.1/voices-v1.1-zh.bin"
  },
  "stitcher": {
    "silence_duration_ms": 300,
    "crossfade_duration_ms": 0,
    "output_format": "mp3",
    "export_bitrate": "192k"
  },
  "m4b_tool_args": {
    "audio-bitrate": "64k",
    "use-filenames-as-chapters": "",
    "jobs": "4"
  },
  "skip_normalization": false
}
